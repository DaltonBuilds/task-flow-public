{
  "name": "task-manager",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:css": "npx postcss ./src/styles/main.css -o ./public/static/main.css --watch",
    "dev:sandbox": "wrangler dev --local --ip 0.0.0.0 --port 3000",
    "build": "npm run build:css && vite build && npm run build:rename",
    "build:css": "npx postcss ./src/styles/main.css -o ./public/static/main.css --env production",
    "build:rename": "mv dist/index.js dist/_worker.js 2>/dev/null || true",
    "build:demo": "npm run build:css && vite build && node scripts/build-static-html.js",
    "preview": "wrangler dev dist/_worker.js --local",
    "preview:demo": "npx serve dist -l 3000",
    "deploy": "npm run build && wrangler deploy",
    "deploy:prod": "npm run build && wrangler deploy --env production",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:migrate:local": "wrangler d1 migrations apply DB --local",
    "db:seed": "wrangler d1 execute DB --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "db:console": "wrangler d1 execute DB --local",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true"
  },
  "dependencies": {
    "hono": "^4.11.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251230.0",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.7.2",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
